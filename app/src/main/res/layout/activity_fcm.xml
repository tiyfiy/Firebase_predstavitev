<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Firebase Cloud Messaging"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FCM Token:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvToken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pridobivanje tokena..."
            android:textSize="12sp"
            android:padding="12dp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp"
            android:textIsSelectable="true" />

        <Button
            android:id="@+id/btnCopyToken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kopiraj Token"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Testiraj FCM:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Naslov obvestila">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNotificationTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Vsebina obvestila">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNotificationBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnSendNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pošlji Lokalno Obvestilo"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zadnje obvestilo:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvLastNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ni obvestil"
            android:padding="12dp"
            android:background="?attr/colorSurfaceVariant"
            android:minHeight="80dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opomba: Za pošiljanje obvestil iz strežnika uporabite Firebase Console ali API."
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            android:textColor="?android:attr/textColorSecondary"
            android:padding="12dp"
            android:background="?attr/colorSurfaceVariant" />

    </LinearLayout>

</ScrollView>
